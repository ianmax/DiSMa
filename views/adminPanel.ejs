<%- include ./partials/header %>
<div class="container">
  <h1>admin panel</h1>
  <h4>Total Items Sold: <%= dataJsonSumQty %></h4>
  <h4>Total Revenue Earned: <%= dataJsonSumRevenue %></h4>
  <h4>Total Profit Earned: <%= dataJsonSumProfit %></h4>
  <table>
    <tr>
      <th>No</th>
      <th>Customer Name</th>
      <th>Item Name</th>
      <th>Total Item Sold</th>
      <th>Total Selling Price</th>
      <th>Total Supplied Price</th>
      <th>Transaction Date</th>
    </tr>
    <% for(let i = 0; i < dataJsonCustomersHistories.length; i++){ %>
      <% for(let y = 0; y < dataJsonSuppliersHistories.length; y++){ %>
        <% for(let k = 0; k < dataJsonCustomers.length; k++){ %>
          <% if(dataJsonCustomers[k].id === dataJsonCustomersHistories[i].CustomerId && dataJsonSuppliersHistories[y].ItemId === dataJsonCustomersHistories[i].ItemId){ %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= dataJsonCustomers[k].first_name %></td>
              <td><%= dataJsonCustomersHistories[i].item_name %></td>
              <td><%= dataJsonCustomersHistories[i].item_qty_buyed %></td>
              <td><%= dataJsonCustomersHistories[i].item_price %></td>
              <td><%= dataJsonSuppliersHistories[y].item_price %></td>
              <td><%= dataJsonCustomersHistories[i].createdAt %></td>
            </tr>
          <% } %>
        <% } %>
      <% } %>
    <% } %>
  </table>
</div>
<%- include ./partials/footer %>
<script>
function convertToRupiah(angka)
{
  var rupiah = '';
  var angkarev = angka.toString().split('').reverse().join('');
  for (var i = 0; i < angkarev.length; i++) if (i % 3 == 0) rupiah += angkarev.substr(i, 3) + '.';
  return 'Rp. ' + rupiah.split('', rupiah.length - 1).reverse().join('');
}
</script>
</body>
</html>
