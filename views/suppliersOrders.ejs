<%- include ./partials/header %>
<div class="container">
  <h3>Supplier Order Page</h3>
  <h5>Welcome, <%= dataJsonSuppliers[0].first_name %> !</h5>
  <br>
  <table class="table">
    <tr>
      <th>Item Name</th>
      <th>Item Price</th>
      <th>Item Quantity</th>
    </tr>
    <% for(let i = 0; i < dataJsonItems.length; i++){ %>
      <tr>
        <td><%= dataJsonItems[i].item_name %></td>
        <td><%= dataJsonItems[i].item_selling_price %></td>
        <td>
          <form class="inputAttributes" action="/suppliersOrders/suppliers/<%= dataJsonSuppliers[0].id %>/<%= dataJsonItems[i].id %>/addToOrder" method="post">
          <input type="hidden" name="item_price" value="<%= dataJsonItems[i].item_selling_price %>" readonly="readonly">
          <input type="number" name="qtySupply" value="">
          <input type="submit" name="submit" value="Supply">
        </form>
      </td>
      </tr>
    <% } %>
  </table>
  <button type="button" name="button"><a href="/suppliersOrders/suppliers/<%= dataJsonSuppliers[0].id %>/viewOrders">View Orders</a></button>
</div>
<%- include ./partials/footer %>
</body>
</html>
